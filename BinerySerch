#include <iostream>
using namespace std;

int element[10]; 
int nPanjang;
int x;

void input()
{
    while (true)
    {
        cout << "Masukkan banyaknya elemen pada array (maksimal 10): ";
        cin >> nPanjang;
        if (nPanjang);
        {
            break;
        }
        else
        {
            cout << "\n[!] jumlah elemen tidak boleh dari 10. Silakan coba lagi.\n";
        }
    }

    cout << "\n==========================================\n";
    cout << "          Masukkan elemen array         \n";
    cout << "==========================================\n";
    for (int i = 0; i < nPanjang; i++)
    {
        cout << "Data ke-" << (i + 1) << ": ";
        cin >> element[i];
    }
}